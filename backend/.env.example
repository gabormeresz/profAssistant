# OpenAI Configuration
# Your OpenAI API key for LLM operations
OPENAI_API_KEY=your_openai_api_key_here

# Tavily Configuration
# API key for Tavily web search & extract (via remote MCP server)
TAVILY_API_KEY=your_tavily_api_key_here

# Optional: LangSmith Configuration (for tracing and monitoring)
# LANGCHAIN_TRACING_V2=true
# LANGCHAIN_API_KEY=your_langsmith_api_key_here
# LANGCHAIN_PROJECT=your_project_name

# Optional: CORS Configuration
# CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Authentication Configuration
# Generate both with one command (no dependencies needed):
#   python3 -c "import secrets,base64,os; print('JWT_SECRET=' + secrets.token_hex(32)); print('ENCRYPTION_KEY=' + base64.urlsafe_b64encode(os.urandom(32)).decode())"
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_fernet_key_here

# Token expiry (optional, these values are the defaults)
# JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
# JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Cookie Configuration (for refresh token httpOnly cookie)
# Defaults are safe for local development â€” only override in production.
# COOKIE_SECURE=false        # Set to true when serving over HTTPS
# COOKIE_SAMESITE=lax        # Use "strict" in production
# COOKIE_DOMAIN=              # Set to your domain in production (e.g. yourdomain.com)

# Admin seed credentials (created on first startup)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change_me_immediately

# Optional: Use a dummy graph for testing 
# USE_DUMMY_GRAPH=true

# Optional: Maximum upload file size in bytes (default: 10 MB = 10485760)
# MAX_FILE_SIZE=10485760