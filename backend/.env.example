# OpenAI Configuration
# Your OpenAI API key for LLM operations
OPENAI_API_KEY=your_openai_api_key_here

# Serper Configuration
# API key for Google search via Serper (used by the web search tool)
SERPER_API_KEY=your_serper_api_key_here

# Optional: LangSmith Configuration (for tracing and monitoring)
# LANGCHAIN_TRACING_V2=true
# LANGCHAIN_API_KEY=your_langsmith_api_key_here
# LANGCHAIN_PROJECT=your_project_name

# Optional: Server Configuration
# HOST=0.0.0.0
# PORT=8000

# Optional: CORS Configuration
# CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Authentication Configuration
# Secret key used to sign JWT access tokens (generate with: python -c "import secrets; print(secrets.token_hex(32))")
JWT_SECRET=your_jwt_secret_here

# Fernet key used to encrypt user API keys at rest (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
ENCRYPTION_KEY=your_fernet_key_here

# Optional: Token expiry overrides
# JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
# JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Admin seed credentials (created on first startup)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change_me_immediately

# Optional: Use a dummy graph for testing 
# USE_DUMMY_GRAPH=false